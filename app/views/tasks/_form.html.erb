<div class="row">
  <div class="col-md-12">
    
    <%= form_for(@task, html: {class: "form-horizontal", role: "form"}) do |f| %>

      <div class="form-group">
        <div class="control-label col-md-3">
          <%= f.label :task_title %>  
        </div>
        <div class="col-md-9">
          <%= f.text_field :title, class: 'form-control', autofocus: true %>  
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-md-3">
          <%= f.label :category %>  
        </div>
        <div class="col-md-9">
          <%= f.collection_select :category_id, Category.all, :id, :name, {prompt: "Select a category"}, {class: "btn btn-sm dropdown-toggle"} %>
         </div>
      </div>

      <div class="form-group">
        <div class="control-label col-md-3">
          <%= f.label :task_description %>
        </div>
        <div class="col-md-9">
          <%= f.text_area :description, class: 'form-control' %>  
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-md-3">
          <%= f.label :your_company %>
        </div>
        <div class="col-md-9">
          <%= f.text_field :company, class: 'form-control' %>  
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-md-3">
          <%= f.label :link_to_task %>
        </div>
        <div class="col-md-9">
          <%= f.text_field :url, class: 'form-control' %>  
        </div>
      </div>
      
      <br />  

      
  
      <div class="form-group">
        <div class="col-md-offset-3 col-md-9">
          <%= f.submit "Log in", class: 'btn btn-primary btn-lg' %>  
          <%= link_to 'Back', root_path,class: 'btn btn-link' %>
        </div>
        
      </div>
      
    <% end %>

    
  </div>
</div>

